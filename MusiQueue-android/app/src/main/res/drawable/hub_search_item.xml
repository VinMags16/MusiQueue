<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >

    <item
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        >
        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="#c1c1c1"
                />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp"
                />
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>
</layer-list>