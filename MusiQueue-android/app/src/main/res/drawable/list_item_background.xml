<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        >

    <shape
        android:shape="rectangle">
        <stroke
            android:width="2dp"
            android:color="#cccccc"
            />
        <gradient
            android:startColor="#cccccc"
            android:endColor="#999999"
            android:angle="90"
            />
        <corners
            android:radius="20dp"
            />
        <padding
            android:bottom="10dp"
            android:top="10dp"
            android:left="10dp"
            android:right="10dp"
            />
    </shape>
    </item>
</layer-list>